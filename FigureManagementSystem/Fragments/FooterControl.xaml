<UserControl x:Class="FigureManagementSystem.Fragments.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <Border
        Background="#34495E" 
        Padding="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Center"
               HorizontalAlignment="Center">
            <TextBlock Text="Figure Management System v1.0" 
                       VerticalAlignment="Center"
                  Foreground="#BDC3C7" 
                  FontSize="12" 
                  Margin="0,0,20,0"/>
            <TextBlock Text="•" 
                       VerticalAlignment="Center"
                  Foreground="#BDC3C7" 
                  FontSize="12" 
                  Margin="0,0,20,0"/>
            <TextBlock Text="nguyenhoanvn" 
                       VerticalAlignment="Center"
                  Foreground="#27AE60" 
                  FontSize="12" 
                  FontWeight="Bold"/>
            </StackPanel>
            <Button Width="100" Height="30"
                    Background="#E74C3C"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    Padding="10"
                    Cursor="Hand"
        Click="ExitButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Exit ✕
                <!-- Button Content -->
            </Button>

        </Grid>
    </Border>
</UserControl>